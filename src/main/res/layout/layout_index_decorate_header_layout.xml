<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:cardBackgroundColor="#eee"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <EditText
            android:id="@+id/id_et_fragment_classify_search_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:drawableLeft="@drawable/img_search_icon"
            android:drawablePadding="@dimen/dp_10"
            android:hint="搜索建材商品"
            android:paddingBottom="10dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingTop="10dp"
            android:textColorHint="#ccc"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/id_iv_fragment_classify_search_content_clear"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:src="@drawable/img_close_icon" />

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/img_zgs_icon"
            android:gravity="center"
            android:text="找公司"
            android:textColor="#777"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/img_tuku_icon"
            android:gravity="center"
            android:text="图库"
            android:textColor="#777"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/img_riji_icon"
            android:gravity="center"
            android:text="日记"
            android:textColor="#777"
            android:textSize="12sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="10dp"
            android:drawableTop="@drawable/img_gl_icon"
            android:gravity="center"
            android:text="攻略"
            android:textColor="#777"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#eee" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fff"
        android:padding="@dimen/dp_10">

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:background="@color/blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="为您推荐" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/img_enter_icon"
            android:text="更多"
            android:textColor="#777" />
    </RelativeLayout>
</LinearLayout>