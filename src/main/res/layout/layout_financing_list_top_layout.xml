    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#eee"/>

    <TextView
        android:textSize="16sp"
        android:textColor="#e2ac1e"
        android:drawablePadding="@dimen/dp_10"
