<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout style="@style/style_ll_house_search">

            <CheckedTextView
                style="@style/style_tv_house_search"
                android:drawableRight="@drawable/select_house_condition_right"
                android:text="空间" />
        </LinearLayout>
        <LinearLayout style="@style/style_ll_house_search">

            <CheckedTextView
                style="@style/style_tv_house_search"
                android:drawableRight="@drawable/select_house_condition_right"
                android:text="局部" />
        </LinearLayout>
        <LinearLayout style="@style/style_ll_house_search">

            <CheckedTextView
                style="@style/style_tv_house_search"
                android:drawableRight="@drawable/select_house_condition_right"
                android:text="户型" />
        </LinearLayout>

        <LinearLayout style="@style/style_ll_house_search">

            <CheckedTextView
                style="@style/style_tv_house_search"
                android:drawableRight="@drawable/select_house_condition_right"
                android:text="风格" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/id_ll_house_list_condition_price"
            style="@style/style_ll_house_search">

            <CheckedTextView
                style="@style/style_tv_house_search"
                android:drawableRight="@drawable/select_house_condition_right"
                android:text="公装" />
        </LinearLayout>
    </LinearLayout>


    <include layout="@layout/fragment_base_recycle_view_layout"/>


</LinearLayout>