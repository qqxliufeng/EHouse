<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:src="@drawable/img_test_bg"
            android:scaleType="centerCrop"/>

        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#333"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="地面选择木地板还是瓷砖"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="很多人在选择装修房子的时候，对于地面的装修非常重视，地板选择都是根据个人喜好，对地板的要求也不尽相同"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-02-01"
                    android:textColor="#777"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/id_tv_adapter_decorate_article_item_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#777"
                    android:text="12345"
                    android:drawablePadding="5dp"
                    android:layout_alignParentRight="true"
                    android:drawableLeft="@drawable/img_small_sc_icon"/>

                <TextView
                    android:layout_toLeftOf="@+id/id_tv_adapter_decorate_article_item_collection"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="#777"
                    android:text="12345"
                    android:drawablePadding="5dp"
                    android:layout_marginRight="@dimen/dp_10"
                    android:drawableLeft="@drawable/img_ll_icon"/>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eee"/>

</LinearLayout>