<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/id_ll_house_list_condition_area"
            style="@style/style_ll_house_search">

            <CheckedTextView
                style="@style/style_tv_house_search"
                android:drawableRight="@drawable/select_house_condition_right"
                android:text="区域" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ccc" />

        <LinearLayout
            android:id="@+id/id_ll_house_list_condition_price"
            style="@style/style_ll_house_search">

            <CheckedTextView
                style="@style/style_tv_house_search"
                android:drawableRight="@drawable/select_house_condition_right"
                android:text="价格" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ccc" />

        <LinearLayout
            android:id="@+id/id_ll_house_list_condition_fx"

            style="@style/style_ll_house_search">

            <CheckedTextView
                style="@style/style_tv_house_search"
                android:drawableRight="@drawable/select_house_condition_right"
                android:text="房型" />
        </LinearLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:background="#ccc" />

        <LinearLayout
            android:id="@+id/id_ll_house_list_condition_more"
            style="@style/style_ll_house_search">

            <CheckedTextView
                style="@style/style_tv_house_search"
                android:drawableRight="@drawable/select_house_condition_right"
                android:text="更多" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#ccc" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/fragment_base_recycle_view_layout" />

        <FrameLayout
            android:id="@+id/id_fl_fragment_house_list_condition_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</LinearLayout>