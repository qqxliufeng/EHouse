<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88000000"
    android:id="@+id/id_ll_fragment_house_list_search_condition_area_container"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:orientation="horizontal">

        <RadioGroup
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="#eee"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/id_tv_fragment_house_area_condition_near"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/select_rb_bg"
                android:button="@null"
                android:padding="15dp"
                android:text="附近"
                android:textColor="@color/select_click_color2"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#ccc" />

            <RadioButton
                android:id="@+id/id_tv_fragment_house_area_condition_area"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/select_rb_bg"
                android:button="@null"
                android:padding="15dp"
                android:text="区域"
                android:textColor="@color/select_click_color2"
                android:textSize="16sp" />
        </RadioGroup>

        <android.support.v7.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#fff" />
    </LinearLayout>

    <View
        android:id="@+id/id_view_house_list_search_condition_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>