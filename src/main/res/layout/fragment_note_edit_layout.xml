<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff"
        android:padding="@dimen/dp_10"
        android:hint="请输入标题"
        android:textColor="#333"
        android:textColorHint="#ccc"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:gravity="top"
        android:minLines="7"
        android:padding="@dimen/dp_10"
        android:hint="记录/分享装修的酸甜苦辣"
        android:textColor="#333"
        android:textColorHint="#ccc"
        android:textSize="@dimen/sp_14" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/id_rl_fragment_note_edit_select_step"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_click_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_zxjd_icon"
            android:drawablePadding="@dimen/dp_10"
            android:text="装修阶段"
            android:textColor="#777"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/img_enter1_icon"
            android:text="准备"
            android:textColor="#444"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/id_rl_fragment_note_edit_select_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_click_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_zxbq_icon"
            android:drawablePadding="@dimen/dp_10"
            android:text="标签"
            android:textColor="#777"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/img_enter1_icon"
            android:text="前期准备"
            android:textColor="#444"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />

    <RelativeLayout
        android:id="@+id/id_rl_fragment_note_edit_select_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/select_click_bg"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_zxrq_icon"
            android:drawablePadding="@dimen/dp_10"
            android:text="日期"
            android:textColor="#777"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/id_tv_fragment_note_edit_select_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:drawablePadding="@dimen/dp_10"
            android:drawableRight="@drawable/img_enter1_icon"
            android:text="2017-01-01"
            android:textColor="#444"
            android:textSize="@dimen/sp_14" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eee">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/shape_bt_gradient3"
            android:text="发送"
            android:textColor="#fff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>