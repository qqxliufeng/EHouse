<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_test_bg" />

        <RelativeLayout
            android:paddingLeft="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="马可波罗"
                android:textColor="#333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/id_tv_adapter_decorate_case_info_for_material_list_xh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:text="型号：123"
                android:textColor="#777"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/id_tv_adapter_decorate_case_info_for_material_list_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/id_tv_adapter_decorate_case_info_for_material_list_xh"
                android:layout_marginBottom="6dp"
                android:text="asfa"
                android:textColor="#777"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/id_tv_adapter_decorate_case_info_for_material_list_xh"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_toRightOf="@+id/id_tv_adapter_decorate_case_info_for_material_list_pp"
                android:text="asdasdasf"
                android:textColor="#777"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eee" />


</LinearLayout>