<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/id_iv_adapter_index_decorate_note_img"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/img_banner_default_img" />

    <LinearLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_ll_gradient_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_tv_adapter_index_decorate_note_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="为爱筑巢，小伙担任翻新二手房"
            android:textColor="#fff"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/id_tv_adapter_index_decorate_note_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="简约现代/2室1厅1厨1卫/85m/4~5万"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/id_tv_adapter_index_decorate_note_see_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_toLeftOf="@+id/id_tv_adapter_index_decorate_note_collection_count"
                android:drawableLeft="@drawable/img_liulan_icon"
                android:drawablePadding="@dimen/dp_10"
                android:text="2536"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/id_tv_adapter_index_decorate_note_collection_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:drawableLeft="@drawable/img_shoucang_icon"
                android:drawablePadding="@dimen/dp_10"
                android:text="2536"
                android:textColor="#fff"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>