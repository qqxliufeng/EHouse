<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_zxal_icon"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:layout_centerInParent="true"
            android:drawablePadding="@dimen/dp_10"
            android:paddingTop="10dp"
            android:text="装修案例"
            android:textColor="@color/blue"
            android:textSize="16sp" />
    </RelativeLayout>

    <com.android.yt.ehouse.app.ui.view.MyGridView
        android:id="@+id/id_gv_decorate_case_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:horizontalSpacing="@dimen/dp_10"
        android:numColumns="2"
        android:verticalSpacing="@dimen/dp_10" />

    <TextView
        android:id="@+id/id_tv_fragment_decorate_case_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_tv_corners"
        android:drawablePadding="10dp"
        android:drawableRight="@drawable/img_qianjian_icon"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:text="更多装修案例"
        android:textColor="@color/gray"
        android:textSize="12sp" />

</LinearLayout>