<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:paddingTop="20dp">

    <android.support.v7.widget.CardView
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:cardCornerRadius="0dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:src="@drawable/ic_back_icon" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/id_rb_fragment_note_decorate_list_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_rb_corners_left1"
                android:button="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="推荐"
                android:textColor="@color/select_rb_text_color" />

            <RadioButton
                android:id="@+id/id_rb_fragment_note_decorate_list_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/select_rb_corners_right1"
                android:button="@null"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:text="全部"
                android:textColor="@color/select_rb_text_color" />
        </RadioGroup>

    </android.support.v7.widget.CardView>

    <android.support.v4.view.ViewPager
        android:layout_marginTop="?actionBarSize"
        android:id="@+id/id_vp_fragment_note_decorate_list_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/id_fab_fragment_note_decorate_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        app:backgroundTint="@color/main_color"
        app:rippleColor="#64bbf7"
        android:src="@drawable/img_edit_icon"/>

</android.support.design.widget.CoordinatorLayout>