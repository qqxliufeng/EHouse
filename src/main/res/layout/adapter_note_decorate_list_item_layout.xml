<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10">

        <ImageView
            android:id="@+id/id_iv_adapter_note_decorate_all_item_face"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="center"
            android:src="@drawable/img_test_bg" />

        <TextView
            android:id="@+id/id_iv_adapter_note_decorate_all_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/id_iv_adapter_note_decorate_all_item_face"
            android:text="666的新家"
            android:textColor="#333"
            android:textSize="@dimen/sp_14" />

        <TextView
            android:id="@+id/id_iv_adapter_note_decorate_all_item_subname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_iv_adapter_note_decorate_all_item_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/id_iv_adapter_note_decorate_all_item_face"
            android:text="2017-01-02"
            android:textColor="#777"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_iv_adapter_note_decorate_all_item_name"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/id_iv_adapter_note_decorate_all_item_subname"
            android:drawableLeft="@drawable/img_renqi_icon"
            android:drawablePadding="@dimen/dp_10"
            android:text="人气旺"
            android:textColor="@color/yellow"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_tv_corners6"
            android:paddingBottom="3dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="3dp"
            android:text="水电改造"
            android:textColor="#fff" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="2"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:text="asdadasdfasdfijasodfjlaksdasdadasdfasdfijasodfjlaksdasdadasdfasdfijasodfjlaksdasdadasdfasdfijasodfjlaksdasdadasdfasdfijasodfjlaksd"
        android:textColor="#333"
        android:textSize="@dimen/sp_14" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10">

        <TextView
            android:id="@+id/id_tv_adapter_note_decorate_all_item_see"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/img_liulan1_icon"
            android:drawablePadding="@dimen/dp_10"
            android:text="4654"
            android:textColor="#777"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_tv_adapter_note_decorate_all_item_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/id_tv_adapter_note_decorate_all_item_see"
            android:drawableLeft="@drawable/img_soucang_icon"
            android:drawablePadding="@dimen/dp_10"
            android:text="4654"
            android:textColor="#777"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_tv_adapter_note_decorate_all_item_common"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_toRightOf="@+id/id_tv_adapter_note_decorate_all_item_collection"
            android:drawableLeft="@drawable/img_pinglun_icon"
            android:drawablePadding="@dimen/dp_10"
            android:text="4654"
            android:textColor="#777"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/id_tv_adapter_note_decorate_all_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="4654"
            android:textColor="#777"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeee" />

</LinearLayout>